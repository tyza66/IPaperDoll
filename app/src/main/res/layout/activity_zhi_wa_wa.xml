<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZhiWaWa"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="128dp"
                android:layout_height="192dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/back1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/yanshi"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/back2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/back3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/back4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/back6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/back7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/back5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/back8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/back9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/back10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="192dp"
                android:orientation="vertical"
                android:gravity="clip_vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:text="纸娃娃信息:"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="文件格式:PNG"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="单位:位图/像素"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="大小:128*192"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/dangqian"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="当前:演示图"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/tc_1"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="图层数:2"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/zhuangtai"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="状态:未构建"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="192dp"
                android:orientation="vertical"
                android:gravity="top">
                <Button
                    android:id="@+id/butt_1"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="清除"
                    android:background="@drawable/btn_layout"/>
                <Button
                    android:id="@+id/butt_2"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="随机"
                    android:background="@drawable/btn_layout"
                    android:layout_marginTop="8dp"/>
                <Button
                    android:id="@+id/butt_3"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="构建"
                    android:background="@drawable/btn_layout"
                    android:layout_marginTop="8dp"/>
                <Button
                    android:id="@+id/butt_4"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="预览"
                    android:background="@drawable/btn_layout"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/fu1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="肢体/模板"
            android:checked="true"
            android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
                <Button
                    android:id="@+id/im_1"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:text="肢体/模板"
                    android:background="@drawable/btn_layout_shenti"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/sp_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tu1"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/fu2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="头发"
                android:checked="true"
                android:visibility="gone"/>
                <Button
                    android:id="@+id/im_2"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:text="头发"
                    android:background="@drawable/btn_layout_toufa"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/sp_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tu2"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/fu3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="衣服"
            android:visibility="gone"/>
                <Button
                    android:id="@+id/im_3"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:text="衣服"
                    android:background="@drawable/btn_layout_yifu"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/sp_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tu3"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/fu4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="裤子"
            android:visibility="gone"/>
                <Button
                    android:id="@+id/im_4"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:text="裤子"
                    android:background="@drawable/btn_layout_kuzi"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/sp_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tu4"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/fu5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="鞋子"
            android:visibility="gone"/>
                <Button
                    android:id="@+id/im_5"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:text="鞋子"
                    android:background="@drawable/btn_layout_xiezi"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/sp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tu5"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/fu6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="眼镜/饰品/眼睛"
            android:visibility="gone"/>
            <Button
                android:id="@+id/im_6"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:text="饰品/眼睛"
                android:background="@drawable/btn_layout_yanjing"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/sp_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tu6"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/fu7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="手套/武器"
            android:visibility="gone"/>
                <Button
                    android:id="@+id/im_7"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="手套/武器"
                    android:background="@drawable/btn_layout_shoutao" />
            </LinearLayout>

            <Spinner
                android:id="@+id/sp_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tu7"
                android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/fu8"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="翅膀/背景"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/im_8"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:text="翅膀/背景"
                        android:background="@drawable/btn_layout_chibang" />
                </LinearLayout>
            <Spinner
                android:id="@+id/sp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tu8"
                android:visibility="gone"/>

         </LinearLayout></ScrollView>
    </LinearLayout>
</LinearLayout>